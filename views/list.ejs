        <![endif]-->
        <h1 class="box" id="heading"><%= day%></h1>
        <div class="box">
            <%for(let i=0;i<items.length;i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p><%=items[i]%></p> 
                </div>
                   
            <%}%>
            <form class="item" action="/" method="POST">
                <input type="text" name="newItem" placeholder="write here">
                <button type="submit">+</button>
            </form>
            
        </div>
        
        
